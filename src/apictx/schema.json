{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/apictx.schema.json",
  "title": "API Context Schema",
  "x-apictx-schema-version": "0.3.0",
  "definitions": {
    "location": {
      "type": "object",
      "required": ["path", "line", "column"],
      "properties": {
        "path": {"type": "string"},
        "line": {"type": "integer"},
        "column": {"type": "integer"}
      },
      "additionalProperties": false
    },
    "parameter": {
      "type": "object",
      "required": ["name", "type", "kind", "default", "required"],
      "properties": {
        "name": {"type": "string"},
        "type": {"type": "string"},
        "kind": {"type": "string", "enum": ["posonly", "pos", "kwonly", "vararg", "kwvar"]},
        "default": {"type": ["string", "null"]},
        "required": {"type": "boolean"}
      },
      "additionalProperties": false
    },
    "module": {
      "type": "object",
      "required": ["kind", "fqn", "docstring", "location"],
      "properties": {
        "kind": {"const": "module"},
        "fqn": {"type": "string"},
        "location": {"$ref": "#/definitions/location"},
        "docstring": {"type": ["string", "null"]}
      },
      "additionalProperties": false
    },
    "function": {
      "type": "object",
      "required": [
        "kind",
        "fqn",
        "location",
        "parameters",
        "returns",
        "docstring",
        "decorators",
        "visibility",
        "deprecated",
        "is_async",
        "owner",
        "is_classmethod",
        "is_staticmethod",
        "is_property",
        "raises",
        "overload_of"
      ],
      "properties": {
        "kind": {"const": "function"},
        "fqn": {"type": "string"},
        "location": {"$ref": "#/definitions/location"},
        "parameters": {"type": "array", "items": {"$ref": "#/definitions/parameter"}},
        "returns": {"type": ["string", "null"]},
        "docstring": {"type": ["string", "null"]},
        "decorators": {"type": "array", "items": {"type": "string"}},
        "visibility": {"type": "string", "enum": ["public", "private"]},
        "deprecated": {"type": "boolean"},
        "is_async": {"type": "boolean"},
        "owner": {"type": ["string", "null"]},
        "is_classmethod": {"type": "boolean"},
        "is_staticmethod": {"type": "boolean"},
        "is_property": {"type": "boolean"},
        "raises": {"type": "array", "items": {"type": "string"}},
        "overload_of": {"type": ["string", "null"]}
      },
      "additionalProperties": false
    },
    "class": {
      "type": "object",
      "required": [
        "kind",
        "fqn",
        "location",
        "docstring",
        "decorators",
        "visibility",
        "deprecated",
        "bases",
        "base_fqns",
        "is_exception",
        "is_enum",
        "is_protocol"
      ],
      "properties": {
        "kind": {"const": "class"},
        "fqn": {"type": "string"},
        "location": {"$ref": "#/definitions/location"},
        "docstring": {"type": ["string", "null"]},
        "decorators": {"type": "array", "items": {"type": "string"}},
        "visibility": {"type": "string", "enum": ["public", "private"]},
        "deprecated": {"type": "boolean"},
        "bases": {"type": "array", "items": {"type": "string"}},
        "base_fqns": {"type": "array", "items": {"type": "string"}},
        "is_exception": {"type": "boolean"},
        "is_enum": {"type": "boolean"},
        "is_protocol": {"type": "boolean"}
      },
      "additionalProperties": false
    },
    "constant": {
      "type": "object",
      "required": ["kind", "fqn", "location", "owner", "type", "value", "visibility", "deprecated"],
      "properties": {
        "kind": {"const": "constant"},
        "fqn": {"type": "string"},
        "location": {"$ref": "#/definitions/location"},
        "owner": {"type": "string"},
        "type": {"type": ["string", "null"]},
        "value": {"type": ["string", "null"]},
        "visibility": {"type": "string", "enum": ["public", "private"]},
        "deprecated": {"type": "boolean"}
      },
      "additionalProperties": false
    },
    "type_alias": {
      "type": "object",
      "required": ["kind", "fqn", "location", "target"],
      "properties": {
        "kind": {"const": "type_alias"},
        "fqn": {"type": "string"},
        "target": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "oneOf": [
    {"$ref": "#/definitions/module"},
    {"$ref": "#/definitions/function"},
    {"$ref": "#/definitions/class"},
    {"$ref": "#/definitions/constant"},
    {"$ref": "#/definitions/type_alias"}
  ]
}
