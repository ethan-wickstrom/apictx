{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/apictx.schema.json",
  "title": "API Context Schema",
  "type": "object",
  "required": ["kind", "fqn"],
  "properties": {
    "kind": {"type": "string", "enum": ["module", "function"]},
    "fqn": {"type": "string"},
    "docstring": {"type": ["string", "null"]},
    "parameters": {
      "type": "array",
      "items": {"$ref": "#/definitions/parameter"}
    },
    "returns": {"type": ["string", "null"]},
    "decorators": {
      "type": "array",
      "items": {"type": "string"}
    },
    "visibility": {"type": "string", "enum": ["public", "private"]},
    "deprecated": {"type": "boolean"}
  },
  "definitions": {
    "parameter": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {"type": "string"},
        "type": {"type": "string"}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
